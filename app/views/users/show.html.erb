<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.vidposts.any? %>
      <h3> Videos (<%= @user.vidposts.count %>)</h3>
      <ul class="user_vidposts">
        <%= render @vidposts %>
      </ul>
      <%= will_paginate @vidposts %>
    <% end %>
  </div>

</div>
